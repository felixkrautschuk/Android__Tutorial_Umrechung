<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/Umrechner_KM">

    <TextView
        android:text="@string/textView_hinweis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_Hinweistext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/label_einheit_km"
        android:id="@+id/textEinheit"
        android:layout_alignBottom="@+id/editText_eingabe"
        android:layout_alignRight="@+id/textview_Hinweistext"
        android:layout_alignEnd="@+id/textview_Hinweistext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0.00"
        android:id="@+id/textView_ausgabe_miles"
        android:layout_marginTop="51dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textview_Hinweistext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Meilen"
        android:id="@+id/textView"
        android:layout_toEndOf="@+id/textEinheit"
        android:layout_alignBottom="@+id/textView_ausgabe_miles"
        android:layout_alignLeft="@+id/textEinheit"
        android:layout_alignStart="@+id/textEinheit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="berechnen"
        android:id="@+id/buttonBerechnen"
        android:layout_below="@+id/textView_ausgabe_miles"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_eingabe"
        android:layout_below="@+id/textview_Hinweistext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
